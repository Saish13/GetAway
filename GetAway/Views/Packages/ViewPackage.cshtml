                    $("#ajax-data-img5").attr("src", data.packagePicture5);
                    $("#ajax-data-img5").attr("data-src", data.packagePicture5);

                    $("#ajax-data-img6").attr("src", data.packagePicture6);
                    $("#ajax-data-img6").attr("data-src", data.packagePicture6);

                    $("#ajax-data-img7").attr("src", data.packagePicture1);
                    $("#ajax-data-img7").attr("data-src", data.packagePicture1);

                    $("#ajax-data-shortdesc").html(data.packageDescription);

                    var rate = data.rate;
                    var discount = data.discount;
                    if (discount == 0)
                    {
                        $("#ajax-data-price").html("<dt>List Price</dt><dd> Rs. " + data.rate + "</dd>");
                    }
                    else
                    {
                        var newrate = rate - (rate*(discount/100))
                        $("#ajax-data-price").html("<dt>List Price</dt><dd><s> Rs. " + data.rate + "</s></dd><dt>Sale Price</dt><dd> Rs. " + newrate + "</dd>");
                        
                    }
                    $("#ajax-data-description").html(data.packageDescription);
                    $("#ajax-data-activities").html(data.packageActivities);
                    

                    $('.side-image').click(function () {
                        var $imageLink = $(this).find('img').data('src');
                        $('.main-image').find('img').attr('src', $imageLink);
                    });

                }

            });
        });
</script>

